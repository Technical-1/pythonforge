{
    // =========================================================================
    // {{ config.name }} - VS Code Settings
    // =========================================================================
    // Generated by quickforge v{{ quickforge_version }}
    // 
    // These settings configure VS Code for optimal Python development with
    // the project's toolchain (ruff, {{ config.tooling.type_checker }}, pytest).
    // =========================================================================

    // -------------------------------------------------------------------------
    // Python Configuration
    // -------------------------------------------------------------------------
    "python.defaultInterpreterPath": "${workspaceFolder}/.venv/bin/python",
    
    // Use the project's virtual environment
    "python.terminal.activateEnvironment": true,

    // -------------------------------------------------------------------------
    // Type Checking
    // -------------------------------------------------------------------------
{% if config.tooling.type_checker in ["basedpyright", "pyright"] %}
    // Use Pylance (Microsoft's Python language server, based on Pyright)
    "python.languageServer": "Pylance",
    
    // Match the type checking mode from pyproject.toml
    "python.analysis.typeCheckingMode": "{{ config.tooling.type_checking_mode.value }}",
    
    // Auto-import settings
    "python.analysis.autoImportCompletions": true,
    "python.analysis.autoSearchPaths": true,
{% if config.project_type.uses_src_layout %}
    "python.analysis.extraPaths": ["${workspaceFolder}/src"],
{% endif %}
{% elif config.tooling.type_checker == "mypy" %}
    // Use mypy for type checking
    "python.languageServer": "Pylance",
    "python.analysis.typeCheckingMode": "off",
    "mypy.runUsingActiveInterpreter": true,
{% endif %}

    // -------------------------------------------------------------------------
    // Formatting - Ruff
    // -------------------------------------------------------------------------
    // Use Ruff as the formatter (replaces black)
    "[python]": {
        "editor.defaultFormatter": "charliermarsh.ruff",
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
            "source.fixAll.ruff": "explicit",
            "source.organizeImports.ruff": "explicit"
        }
    },

    // -------------------------------------------------------------------------
    // Linting - Ruff
    // -------------------------------------------------------------------------
    // Ruff extension settings
    "ruff.enable": true,
    "ruff.lint.enable": true,
    "ruff.format.args": [],
    
    // Import from pyproject.toml configuration
    "ruff.importStrategy": "fromEnvironment",

    // -------------------------------------------------------------------------
    // Testing - pytest
    // -------------------------------------------------------------------------
    "python.testing.pytestEnabled": true,
    "python.testing.unittestEnabled": false,
    "python.testing.pytestArgs": [
        "tests",
        "-v"
    ],

    // -------------------------------------------------------------------------
    // Editor Settings
    // -------------------------------------------------------------------------
    // Match ruff's line length
    "editor.rulers": [88],
    
    // Show whitespace in selections
    "editor.renderWhitespace": "selection",
    
    // Trim trailing whitespace
    "files.trimTrailingWhitespace": true,
    "files.insertFinalNewline": true,
    "files.trimFinalNewlines": true,

    // -------------------------------------------------------------------------
    // File Associations
    // -------------------------------------------------------------------------
    "files.associations": {
        "*.j2": "jinja",
        "pyproject.toml": "toml",
        ".python-version": "plaintext"
    },

    // -------------------------------------------------------------------------
    // File Exclusions
    // -------------------------------------------------------------------------
    "files.exclude": {
        "**/__pycache__": true,
        "**/.pytest_cache": true,
        "**/.mypy_cache": true,
        "**/.ruff_cache": true,
        "**/*.egg-info": true,
        ".venv": true,
        ".uv": true
    },

    // -------------------------------------------------------------------------
    // Search Exclusions
    // -------------------------------------------------------------------------
    "search.exclude": {
        "**/.venv": true,
        "**/.uv": true,
        "**/uv.lock": true,
        "**/__pycache__": true,
        "**/htmlcov": true
    },

    // -------------------------------------------------------------------------
    // Recommended Extensions
    // -------------------------------------------------------------------------
    // Note: Extensions are configured in .vscode/extensions.json
    // Key extensions for this project:
    // - ms-python.python (Python support)
    // - ms-python.vscode-pylance (Type checking)
    // - charliermarsh.ruff (Linting & formatting)
    // - tamasfe.even-better-toml (TOML support)
    // - ms-python.debugpy (Debugging)
}
