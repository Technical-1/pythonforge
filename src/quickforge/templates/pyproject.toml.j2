# =============================================================================
# {{ config.name }} - Project Configuration
# =============================================================================
# Generated by quickforge v{{ quickforge_version }}
# This file follows PEP 621 for project metadata specification.
# =============================================================================

[project]
name = "{{ config.name }}"
version = "0.1.0"
description = "{{ config.description }}"
readme = "README.md"
license = "{{ config.license.spdx_id }}"
requires-python = "{{ config.python_version.requires_python }}"
authors = [
    { name = "{{ config.author.name }}"{% if config.author.email %}, email = "{{ config.author.email }}"{% endif %} }
]
keywords = []
classifiers = [
    "Development Status :: 3 - Alpha",
    "Intended Audience :: Developers",
    "License :: OSI Approved :: {{ config.license.value }} License",
    "Operating System :: OS Independent",
    "Programming Language :: Python :: 3",
    "Programming Language :: Python :: {{ config.python_version.value }}",
{% if config.python_version.value == "3.11" %}
    "Programming Language :: Python :: 3.12",
    "Programming Language :: Python :: 3.13",
{% elif config.python_version.value == "3.12" %}
    "Programming Language :: Python :: 3.13",
{% endif %}
    "Typing :: Typed",
]

# -----------------------------------------------------------------------------
# Dependencies
# -----------------------------------------------------------------------------
dependencies = [
{% if config.project_type.value == "cli" %}
    "typer>=0.12.0",
    "rich>=13.0.0",
{% elif config.project_type.value == "api" %}
    "fastapi>=0.115.0",
    "uvicorn>=0.32.0",
{% endif %}
]

[project.optional-dependencies]
dev = [
    "pytest>=8.0.0",
    "pytest-cov>=5.0.0",
{% if config.tooling.type_checker == "basedpyright" %}
    "basedpyright>=1.20.0",
{% elif config.tooling.type_checker == "pyright" %}
    "pyright>=1.1.380",
{% elif config.tooling.type_checker == "mypy" %}
    "mypy>=1.13.0",
{% endif %}
{% if config.features.pre_commit %}
    "pre-commit>=3.8.0",
{% endif %}
{% if config.tooling.linter == "ruff" or config.tooling.formatter == "ruff" %}
    "ruff>=0.8.0",
{% endif %}
]

{% if config.project_type.value == "cli" %}
# -----------------------------------------------------------------------------
# CLI Entry Point
# -----------------------------------------------------------------------------
[project.scripts]
{{ config.name }} = "{{ config.package_name }}.cli:app"
{% endif %}

[project.urls]
Homepage = "https://github.com/{{ config.author.name | lower | replace(' ', '') }}/{{ config.name }}"
Repository = "https://github.com/{{ config.author.name | lower | replace(' ', '') }}/{{ config.name }}"
Issues = "https://github.com/{{ config.author.name | lower | replace(' ', '') }}/{{ config.name }}/issues"

# =============================================================================
# Build System
# =============================================================================
[build-system]
requires = ["hatchling"]
build-backend = "hatchling.build"

{% if config.project_type.uses_src_layout %}
[tool.hatch.build.targets.wheel]
packages = ["src/{{ config.package_name }}"]
{% endif %}

# =============================================================================
# Ruff - Linting & Formatting
# =============================================================================
[tool.ruff]
target-version = "py{{ config.python_version.value | replace('.', '') }}"
line-length = 88
exclude = [
    ".git",
    ".venv",
    "__pycache__",
    "build",
    "dist",
]

[tool.ruff.lint]
select = [
    "E",      # pycodestyle errors
    "W",      # pycodestyle warnings
    "F",      # Pyflakes
    "I",      # isort
    "UP",     # pyupgrade
    "B",      # flake8-bugbear
    "SIM",    # flake8-simplify
    "RUF",    # Ruff-specific rules
]
ignore = [
    "E501",   # Line too long (formatter handles this)
]

[tool.ruff.lint.isort]
known-first-party = ["{{ config.package_name }}"]

[tool.ruff.format]
quote-style = "double"
docstring-code-format = true

# =============================================================================
# Type Checking - {{ config.tooling.type_checker }}
# =============================================================================
{% if config.tooling.type_checker in ["basedpyright", "pyright"] %}
[tool.{{ config.tooling.type_checker }}]
typeCheckingMode = "{{ config.tooling.type_checking_mode.value }}"
pythonVersion = "{{ config.python_version.value }}"
{% if config.project_type.uses_src_layout %}
include = ["src"]
{% else %}
include = ["{{ config.package_name }}"]
{% endif %}
exclude = [
    "**/__pycache__",
    ".venv",
    "build",
    "dist",
]
reportMissingImports = true
reportMissingTypeStubs = false
{% elif config.tooling.type_checker == "mypy" %}
[tool.mypy]
python_version = "{{ config.python_version.value }}"
warn_return_any = true
warn_unused_configs = true
disallow_untyped_defs = {% if config.tooling.type_checking_mode.value == "strict" %}true{% else %}false{% endif %}

{% endif %}

# =============================================================================
# Testing - pytest
# =============================================================================
[tool.pytest.ini_options]
testpaths = ["tests"]
addopts = [
    "-v",
    "--strict-markers",
    "--strict-config",
    "-ra",
{% if config.project_type.uses_src_layout %}
    "--cov=src/{{ config.package_name }}",
{% else %}
    "--cov={{ config.package_name }}",
{% endif %}
    "--cov-report=term-missing",
]

[tool.coverage.run]
{% if config.project_type.uses_src_layout %}
source = ["src/{{ config.package_name }}"]
{% else %}
source = ["{{ config.package_name }}"]
{% endif %}
branch = true

[tool.coverage.report]
exclude_lines = [
    "pragma: no cover",
    "def __repr__",
    "raise NotImplementedError",
    "if TYPE_CHECKING:",
]
