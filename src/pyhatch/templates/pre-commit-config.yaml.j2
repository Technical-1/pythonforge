# =============================================================================
# {{ config.name }} - Pre-commit Configuration
# =============================================================================
# Generated by pyhatch v{{ pyhatch_version }}
#
# Pre-commit hooks run automatically before each commit to ensure code quality.
#
# Setup:
#   $ uv run pre-commit install
#
# Manual run:
#   $ uv run pre-commit run --all-files
#
# Update hooks:
#   $ uv run pre-commit autoupdate
# =============================================================================

# Minimum pre-commit version
minimum_pre_commit_version: "3.0.0"

# Stop at first failure for faster feedback
fail_fast: true

repos:
  # ---------------------------------------------------------------------------
  # General Hooks
  # ---------------------------------------------------------------------------
  - repo: https://github.com/pre-commit/pre-commit-hooks
    rev: v5.0.0
    hooks:
      # Prevent giant files from being committed
      - id: check-added-large-files
        args: ["--maxkb=1000"]
      
      # Check for files that would conflict on case-insensitive filesystems
      - id: check-case-conflict
      
      # Check for merge conflict strings
      - id: check-merge-conflict
      
      # Check that scripts with shebangs are executable
      - id: check-shebang-scripts-are-executable
      
      # Ensure files end with a newline
      - id: end-of-file-fixer
      
      # Remove trailing whitespace
      - id: trailing-whitespace
        args: [--markdown-linebreak-ext=md]
      
      # Check YAML syntax
      - id: check-yaml
        args: [--unsafe]  # Allow custom tags
      
      # Check TOML syntax
      - id: check-toml
      
      # Detect private keys
      - id: detect-private-key

  # ---------------------------------------------------------------------------
  # Ruff - Linting and Formatting
  # ---------------------------------------------------------------------------
  - repo: https://github.com/astral-sh/ruff-pre-commit
    rev: v0.8.4
    hooks:
      # Run the linter with auto-fix
      - id: ruff
        name: ruff (lint)
        args: [--fix, --exit-non-zero-on-fix]
      
      # Run the formatter
      - id: ruff-format
        name: ruff (format)

{% if config.tooling.type_checker == "basedpyright" %}
  # ---------------------------------------------------------------------------
  # Type Checking - basedpyright
  # ---------------------------------------------------------------------------
  # Note: Type checking in pre-commit can be slow for large projects.
  # Consider running it only in CI if commits become too slow.
  - repo: local
    hooks:
      - id: basedpyright
        name: basedpyright (type check)
        entry: uv run basedpyright
        language: system
        types: [python]
        pass_filenames: false
        # Uncomment below to skip type checking in pre-commit
        # stages: [manual]
{% elif config.tooling.type_checker == "pyright" %}
  # ---------------------------------------------------------------------------
  # Type Checking - pyright
  # ---------------------------------------------------------------------------
  - repo: local
    hooks:
      - id: pyright
        name: pyright (type check)
        entry: uv run pyright
        language: system
        types: [python]
        pass_filenames: false
{% elif config.tooling.type_checker == "mypy" %}
  # ---------------------------------------------------------------------------
  # Type Checking - mypy
  # ---------------------------------------------------------------------------
  - repo: https://github.com/pre-commit/mirrors-mypy
    rev: v1.13.0
    hooks:
      - id: mypy
        args: [--strict]
        additional_dependencies: []
{% endif %}

  # ---------------------------------------------------------------------------
  # Security Checks
  # ---------------------------------------------------------------------------
  - repo: https://github.com/gitleaks/gitleaks
    rev: v8.21.2
    hooks:
      - id: gitleaks
        name: gitleaks (secrets detection)

# =============================================================================
# CI Configuration
# =============================================================================
# These settings apply when running in CI environments
ci:
  # Auto-update monthly
  autoupdate_schedule: monthly
  
  # Skip hooks that don't work well in CI
  skip: []
  
  # Use specific Python version in CI
  # autoupdate_branch: ''
